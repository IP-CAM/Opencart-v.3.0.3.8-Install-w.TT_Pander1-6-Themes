{{ header }}
	<div id="content">
		{{ column_left }}		
		{{ content_top }}		
		{{ content_bottom }}		
		{{ column_right }}
	
		{# Review System #}
		<hr/>
		<div class="container">
			<div class="row">
			<div class="reviews-area-title">
				<h2>Reviews</h2>
			</div>
			{% if reviews %}
				{% for review in reviews %}
				<table class="table   table-review-sp">
				  <tr>
					<td style="width: 50%;"><span class="text-under-line-sp">{{ review.author }}</span> on {{ review.date_added }}</td>
				  </tr>
				  <tr>
					<td colspan="2">
					  {% for i in 1..5 %}
					  {% if review.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> {% endif %}
					  {% endfor %}<p>{{ review.text }}</p></td>
				  </tr>
				</table>
				{% endfor %}
				<div class="text-right">{{ pagination }}</div>
				{% else %}
				<p>{{ text_no_reviews }}</p>
				{% endif %} 
				
		{{ results }}
			</div>
		</div>
		{# Review System #}
	</div>
{{ footer }}